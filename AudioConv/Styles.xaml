<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type TextBlock}" x:Key="HeaderText">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <Style TargetType="{x:Type RadioButton}" x:Key="RadioSelect">
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="{x:Type Border}" x:Key="OptionsBorder">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Margin" Value="15,5"/>
        <Setter Property="BorderBrush" Value="{StaticResource  {x:Static SystemColors.ActiveBorderBrushKey}}"/>
    </Style>
    
</ResourceDictionary>